$out_dir = '%DOC%/output';
$pdf_mode = 1;
$interaction = 'nonstopmode';
$shell_escape = 1;
$bibtex_use = 2;  # Use biber

# Set environment variable for biber to find .bib files locally and from parent directories
$ENV{'BIBINPUTS'} = '.:../..:';

$clean_ext = 'aux bbl bcf blg fls log run.xml synctex.gz toc out lof lot';
